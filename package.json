    "electron-rebuild": "^3.2.9",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "eslint": "^8.35.0",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "history": "^5.3.0",
